<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thestockers">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/fridge"
        android:label="@string/app_name"
        android:roundIcon="@drawable/fridge"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheStockers">
        <activity
            android:name=".HomeUpdateActivity"
            android:exported="true"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ListAddActivity"
            android:exported="false"
            android:label="Add Item"
            android:parentActivityName=".ViewList" />
        <activity
            android:name=".ViewList"
            android:exported="false"
            android:label="Shopping List"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ShoppingAddActivity"
            android:exported="false"
            android:label="Add List"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ScannerActivity"
            android:exported="true"
            android:label="Add Item"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CaptureAct"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>